<div class="c-post-card-tag-featured4 c-post-card-tag-featured4{{#unless no-js}} js-post-card__wrap{{/unless}}">
        
        {{#if feature_image}}
        <div class="c-post-card-tag-featured4__media">
            <div class="c-post-card-tag-featured4__image--wrap">
                <img alt="{{#if feature_image_alt}}{{ feature_image_alt }}{{ else }}{{ title }}{{/if}}"
                    class="c-post-card-tag-featured4__image lazyload" src="{{img_url feature_image absolute=" true" }}">
            </div>
        </div>
        {{/if}}
        <div class="c-post-card-tag-featured4__main">
            <div>
                <a href="{{url absolute=" true"}}">
                    <div class="c-post-card-tag-featured4__tag-and-date">
                        <div class="c-post-card-tag-featured4__primary-tag">
                            {{primary_tag.name}}
                        </div>
                        <div class="c-post-card-tag-featured4__date">
                            <time datetime='{{ date format=' YYYY-MM-DD' }}'>{{ date
                                format='YYYY-MM-DD' }}</time>
                        </div>
                    </div>
                </a>
            </div>
            <div class="c-post-card-tag-featured4__title">
                <a href="{{url absolute=" true"}}" class="c-post-card-tag-featured4__link">{{title}}</a>
            </div>
            <div class="c-post-card-tag-featured2__excerpt"><a href="{{url absolute=" true"}}"
                        class="c-post-card-big__link">{{ excerpt
                        }}</a></div>
                        <div>
                <a href="{{url absolute=" true"}}">
                    <div class="c-post-card-tag-featured4__tag-and-date--mobile">
                        <div class="c-post-card-tag-featured4__primary-tag">
                            {{primary_tag.name}}
                        </div>
                        <div class="c-post-card-tag-featured4__date">
                            <time datetime='{{ date format=' YYYY-MM-DD' }}'>{{ date
                                format='YYYY-MM-DD' }}</time>
                        </div>
                    </div>
                </a>
            </div>
        </div>
</div>