<div class="c-post-card-featured c-post-card-featured{{#unless no-js}} js-post-card__wrap{{/unless}}">
    <a href="{{url absolute=" true"}}">
        {{#if feature_image}}
        <div class="c-post-card-featured__media c-post-card-featured__media--desktop">
            <div class="c-post-card-featured__image--wrap">
                <img alt="{{#if feature_image_alt}}{{ feature_image_alt }}{{ else }}{{ title }}{{/if}}"
                    class="c-post-card-featured__image lazyload" src="{{img_url feature_image absolute=" true" }}">
            </div>
        </div>
        {{/if}}
        <div class="c-post-card-featured__main">
            <div class="c-post-card-featured__tag-and-date">
                <div class="c-post-card-featured__primary-tag">
                    {{primary_tag.name}}
                </div>
                <div class="c-post-card-featured__date">
                    <time datetime='{{ date format=' YYYY-MM-DD' }}'>{{ date
                        format='YYYY-MM-DD' }}</time>
                </div>
            </div>
            <div class="c-post-card-featured__title">
                <a href="{{url absolute=" true"}}" class="c-post-card-featured__link">{{title}}</a>
            </div>
            <div class="c-post-card-featured__excerpt"><a href="{{url absolute=" true"}}"
                    class="c-post-card-featured__link">{{ excerpt
                    }}</a></div>
                    <div class="c-post-card-featured__tag-and-date--mobile">
                <div class="c-post-card-featured__primary-tag">
                    {{primary_tag.name}}
                </div>
                <div class="c-post-card-featured__date">
                    <time datetime='{{ date format=' YYYY-MM-DD' }}'>{{ date
                        format='YYYY-MM-DD' }}</time>
                </div>
            </div>
        </div>
    </a>
</div>