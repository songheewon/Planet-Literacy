<div class="c-post-card-photo c-post-card-photo{{#unless no-js}} js-post-card__wrap{{/unless}}">
<a href="{{url absolute="true"}}">
        {{#if feature_image}}
        <div class="c-post-card-photo__media">
            <div class="c-post-card-photo__image--wrap">
                <img alt="{{#if feature_image_alt}}{{ feature_image_alt }}{{ else }}{{ title }}{{/if}}"
                    class="c-post-card-photo__image lazyload" src="{{img_url feature_image absolute=" true" }}">
            </div>
        </div>
        {{/if}}
</a>
</div>